package br.com.pc2.rh.view;

import java.time.LocalDate;
import java.util.List;

import br.com.pc2.rh.controller.ClienteController;
import br.com.pc2.rh.model.Cliente;
import br.com.pc2.rh.persistence.ClienteDAOImpl;

public class Teste {
	    public static void main(String[] args) {
	    	ClienteDAOImpl clienteDAO = new ClienteDAOImpl();

	        String rgCliente = "123456789"; 

	        
	        Cliente cliente = clienteDAO.buscarPorRg(rgCliente);

	        
	        if (cliente != null) {
	            System.out.println("Cliente encontrado:");
	            System.out.println(
	                "Código: " + cliente.getCodCliente() +
	                " - Nome: " + cliente.getNome() +
	                " - RG: " + cliente.getRg() +
	                " - Endereço: " + cliente.getEndereco() +
	                " - Bairro: " + cliente.getBairro() +
	                " - Cidade: " + cliente.getCidade() +
	                " - Estado: " + cliente.getEstado() +
	                " - CEP: " + cliente.getCep() +
	                " - Data de Nascimento: " + cliente.getNascimento()
	            );
	        } else {
	            System.out.println("Nenhum cliente encontrado com o RG " + rgCliente + ".");
	        }
	    }

}



